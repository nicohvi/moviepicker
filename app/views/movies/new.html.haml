%section.query
  .error
  = text_field_tag :query, nil, placeholder: 'Type in a movie name, bro.'
  = button_tag id: 'query-button' do
    Search!

%section.spinner

%section.movies

%section#movie

%script#movie-list-template(type="text/x-handlebars-template")
  %section.movie{ data: { tomato_id: "{{tomato_id}}", imdb_id: "{{imdb_id}}"  }}
    %img(src="{{ image }}")
    %span.title {{ title }}

%script#movie-template(type="text/x-handlebars-template")
  {{# if image }}
  %img(src="{{ image }}")
  {{ else }}
  = image_tag('movie.svg')
  {{/if}}
  %section.info 
    %h2.title {{ title }} {{# if release_year }} ({{ release_year }}) {{/if}}
    {{# if tomato_rating }}
    %h3.rating Critics think: {{ tomato_rating.critics }}
    %h3.rating The audience thinks: {{ tomato_rating.audience }}
    {{/if}}
    {{# if imdb_rating }}
    %h3.rating IMDB thinks: {{ imdb_rating }}
    {{/if}}
  
